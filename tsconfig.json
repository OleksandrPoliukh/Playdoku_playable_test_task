{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "lib": ["ESNext", "DOM"],
        "moduleResolution": "Node",
        "strict": false,
        "sourceMap": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "noUnusedLocals": false,
        "noUnusedParameters": true,
        "noImplicitReturns": false,
        "skipLibCheck": true,

        "outDir": "./dist/",
        "allowJs": true,
    },
    "include": ["./src/**/*"]
}
